// firebase-config.js
// Configuração do Firebase para o projeto AC Transporte

const firebaseConfig = {
  apiKey: "AIzaSyCSZxyIJFEJSX9fYE6vSHLfAtK7MSKg4ME",
  authDomain: "ac-transporte.firebaseapp.com",
  projectId: "ac-transporte",
  storageBucket: "ac-transporte.firebasestorage.app",
  messagingSenderId: "915211154218",
  appId: "1:915211154218:web:635893e6e9a50f196c6453",
  measurementId: "G-1XX39DLCHF"
};

// Inicializar Firebase
firebase.initializeApp(firebaseConfig);

// Inicializar serviços
const db = firebase.firestore();
const auth = firebase.auth();
const storage = firebase.storage();
const analytics = firebase.analytics();

// Configurar persistência offline
db.enablePersistence()
  .then(() => {
    console.log('Firebase Offline Persistence ativado');
  })
  .catch((err) => {
    if (err.code == 'failed-precondition') {
      console.log('Múltiplas abas abertas, persistência offline não disponível');
    } else if (err.code == 'unimplemented') {
      console.log('Navegador não suporta persistência offline');
    }
  });

// Exportar serviços
window.firebaseApp = firebase.app();
window.firebaseDb = db;
window.firebaseAuth = auth;
window.firebaseStorage = storage;

console.log('Firebase configurado com sucesso!');
